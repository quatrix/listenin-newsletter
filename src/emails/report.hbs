---
layout: default.hbs
subject: weekly report for {{ report.venue }}
---
<span class="preheader">Weekly report for {{report.venue}}</span>
<div class="header">
  <table>
    <tr>
      <td class='headline'>
        <h1>Weekly report for {{ report.venue }}</h1>
      </td>
    </tr>
  </table>
</div>
<table class="main">
  <tr>
    <td class="wrapper">
        <h2>Overview</h2>
        {{>overview report}}
    </td>
  </tr>
  <tr>
    <td class="wrapper">
        <h2>Your Top Tracks</h2>
        {{>top_tracks report.top_tracks}}
    </td>
  </tr>
  <tr>
    <td class="wrapper">
        <h2>Top Tracks for Tel Aviv</h2>
        {{>top_tracks report.top_tracks_tlv}}
    </td>
  </tr>
  <tr>
    <td class="wrapper">
      <h2>Last {{#length report.days}}{{this}}{{/length}} Days</h2>
      <table>
        {{#each report.days}}
        <tr>
          <td>
            <table class='parts_report'>
                <tr>
                    <td class='day' style='text-align: center'> <h3>{{this.day}}</h3> </td>
                </tr>
                {{#if this.parts}}
                    {{#each this.parts}}
                    <tr>
                        <td>
                            {{>part}}
                        </td>
                    {{/each}}
                </tr>
                {{else}}
                    <tr>
                        <td colspan=2 class='no-data'>
                            {{> notice type='warning' text='No data' }}
                        </td>
                    </tr>
                {{/if}}
            </table>
            </td>
        </tr>
        {{/each}}
      </table>
    </td>
  </tr>
</table>
<div class="footer">
  <table>
    <tr>
      <td class="align-center">
        <p>listenin.io</p>
      </td>
    </tr>
  </table>
</div>
