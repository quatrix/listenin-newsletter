  <tr>
    <td align="{{ align }}">
      <table cellpadding="0" cellspacing="0">
        <tr>
          <td colspan="2">
            {{ this.name }}
          </td>
        </tr>
        <tr>
          <td colspan="3">
            {{>genres this.genres}}
          </td>
        </tr>
        <tr>
          <td class='bpm-cell'>
            {{>bpm this.bpm}}
          </td>
          <td class='mood-cell'>
            {{>moods this.moods}}
          </td>
          <td>
            {{>sample_counter this.upload_stats}}
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
